---
import "normalize.css/normalize.css";
import Layout from "../layouts/Layout.astro";
import "../sass/main.scss";
import { getTranslations } from "../i18n/utils";

const lang = "en";
const translations = await getTranslations(lang);
const t = translations.legal;
---

<Layout title="Legal Notice - ClÃ©ment Maillet">
  <div class="legal-page" id="legal-page">
    <section class="legal-page__wrapper">
      <h1 class="legal-page__title">{t.title}</h1>

      <section class="legal-page__section">
        <h2>{t.sections.editor.title}</h2>
        <p>
          <strong>{t.sections.editor.name}</strong> {t.sections.editor.values.name}<br />
          <strong>{t.sections.editor.status}</strong> {t.sections.editor.values.status}<br />
          <strong>{t.sections.editor.location}</strong> {t.sections.editor.values.location}<br />
          <strong>{t.sections.editor.email}</strong> clement.maillet56@gmail.com<br />
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.director.title}</h2>
        <p>
          <strong>{t.sections.director.director}</strong> {t.sections.editor.values.name}<br />
          <strong>{t.sections.director.contact}</strong> clement.maillet56@gmail.com
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.hosting.title}</h2>
        <p>
          <strong>{t.sections.hosting.provider}</strong> {t.sections.hosting.values.provider}<br />
          <strong>{t.sections.hosting.address}</strong> {t.sections.hosting.values.address}<br />
          <strong>{t.sections.hosting.phone}</strong> {t.sections.hosting.values.phone}<br />
          <strong>{t.sections.hosting.website}</strong>
          <a
            href="https://www.hetzner.com"
            target="_blank"
            rel="noopener noreferrer">www.hetzner.com</a
          ><br />
          <em>{t.sections.hosting.note}</em>
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.intellectual.title}</h2>
        <p>
          {t.sections.intellectual.p1}
        </p>
        <p>
          {t.sections.intellectual.p2}
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.data.title}</h2>
        <p>
          {t.sections.data.p1}
        </p>
        <p>
          {t.sections.data.p2}
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.analytics.title}</h2>
        <p>{t.sections.analytics.intro}</p>
        <ul>
          <li>
            <strong>Umami Analytics:</strong> {t.sections.analytics.umami}
          </li>
          <li>
            <strong>Google reCAPTCHA:</strong> {t.sections.analytics.recaptcha}
          </li>
          <li>
            <strong>EmailJS:</strong> {t.sections.analytics.emailjs}
          </li>
        </ul>
        <p>
          {t.sections.analytics.p1}
        </p>
        <p>
          {t.sections.analytics.p2}
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.liability.title}</h2>
        <p>
          {t.sections.liability.p1}
        </p>
        <p>
          {t.sections.liability.p2}
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.accessibility.title}</h2>
        <p>
          {t.sections.accessibility.p1}
        </p>
      </section>

      <section class="legal-page__section">
        <h2>{t.sections.law.title}</h2>
        <p>
          {t.sections.law.p1}
        </p>
      </section>
    </section>
  </div>
</Layout>
