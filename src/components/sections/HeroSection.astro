---
import type { Language } from "../../i18n/config";
import githubLogo from "../../assets/github.svg";
import linkedinLogo from "../../assets/linkedin.svg";

interface Props {
  lang: Language;
  translations: any;
}

const { lang, translations } = Astro.props;
const t = translations.hero;
---

<section id="hero">
  <!-- Floating decorative elements -->
  <div class="hero__floating">
    <div class="hero__floating-shape hero__floating-shape--1"></div>
    <div class="hero__floating-shape hero__floating-shape--2"></div>
    <div class="hero__floating-shape hero__floating-shape--3"></div>
    <div class="hero__floating-shape hero__floating-shape--4"></div>
  </div>

  <div class="hero__wrapper">
    <h1 class="hero__title" data-reveal="up">
      <span class="hero__title-name">{t.name}</span>
      <br />
      <span class="hero__title-highlighted">{t.title}</span>
    </h1>

    <div class="hero__description" data-reveal="up" data-reveal-delay="1">
      <p>
        {t.description.part1} <span class="highlighted highlighted-primary"
          >{t.description.highlighted1}</span
        > {t.description.part2}
        <br />
        {t.description.part3} <span
          class="highlighted highlighted-primary">{t.description.highlighted2}</span
        > {t.description.part4}
      </p>
    </div>
    <div class="hero__socials" data-reveal="up" data-reveal-delay="2">
      <a
        href="https://github.com/Karbbone"
        target="_blank"
        rel="noopener noreferrer"
        class="hero__socials-item hero__socials-item-github"
      >
        <img
          src={githubLogo.src}
          alt={t.socialAlt.github}
        />
      </a>
      <a
        class="hero__socials-item hero__socials-item-linkedin"
        href="https://www.linkedin.com/in/cl%C3%A9ment-maillet-632895255/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src={linkedinLogo.src}
          alt={t.socialAlt.linkedin}
        />
      </a>
      <a
        class="hero__socials-item hero__socials-item-cv"
        href="/clement_maillet_cv.pdf"
        download>{t.socialAlt.cv}</a
      >
    </div>
    <div class="hero__cta" data-reveal="up" data-reveal-delay="3">
      <a href="#about" class="hero__cta-button" draggable="false">{t.cta}</a>
    </div>
  </div>
</section>
