---
import type { Language } from "../../i18n/config";

interface Props {
  lang: Language;
  translations: any;
}

const { lang, translations } = Astro.props;
const t = translations.contact;
---

<section id="contact">
  <div class="contact__wrapper">
    <h2 class="contact__title"><span>{t.title}</span></h2>
    <p class="contact__email-info">
      {t.emailInfo}
      <a href="mailto:clement.maillet56@gmail.com" class="contact__email-link">
        clement.maillet56@gmail.com
      </a>
    </p>
    <div class="contact__success"></div>
    <form class="contact__form" id="contact-form" autocomplete="off" novalidate>
      <input type="hidden" name="_captcha" value="false" />
      <div class="contact__form-group">
        <label for="contact-nom" class="contact__form-label">{t.form.labels.lastName}</label>
        <input
          type="text"
          id="contact-nom"
          name="nom"
          class="contact__form-input"
          required
        />
      </div>
      <div class="contact__form-group">
        <label for="contact-prenom" class="contact__form-label">{t.form.labels.firstName}</label>
        <input
          type="text"
          id="contact-prenom"
          name="prenom"
          class="contact__form-input"
          required
        />
      </div>
      <div class="contact__form-group">
        <label for="contact-email" class="contact__form-label">{t.form.labels.email}</label>
        <input
          type="email"
          id="contact-email"
          name="email"
          class="contact__form-input"
          required
        />
      </div>
      <div class="contact__form-group">
        <label for="contact-message" class="contact__form-label">{t.form.labels.message}</label>
        <textarea
          id="contact-message"
          name="message"
          class="contact__form-textarea"
          rows="5"
          required></textarea>
      </div>
      <div class="contact__form-group contact__form-group--recaptcha">
        <div
          class="g-recaptcha"
          data-sitekey="6LeW4HgrAAAAAHcfyOZzQvIyeJRJRll-NI6grXIv"
        >
        </div>
      </div>
      <button draggable="false" type="submit" class="contact__form-submit"
        >{t.form.submit}</button
      >
    </form>
  </div>
</section>
