---
import adonisLogo from "../../assets/technos/adonis.svg";
import dockerLogo from "../../assets/technos/docker.svg";
import gitLogo from "../../assets/technos/git.svg";
import javaLogo from "../../assets/technos/java.svg";
import mongodbLogo from "../../assets/technos/mongodb.svg";
import mysqlLogo from "../../assets/technos/mysql.svg";
import nodejsLogo from "../../assets/technos/nodejs.svg";
import reactLogo from "../../assets/technos/react.svg";
import typescriptLogo from "../../assets/technos/typescript.svg";
import type { Language } from "../../i18n/config";

interface Props {
  lang: Language;
  translations: any;
}

const { lang, translations } = Astro.props;
const t = translations.expH;

const technologies = [
  { name: "React", logo: reactLogo, url: "https://react.dev/" },
  {
    name: "TypeScript",
    logo: typescriptLogo,
    url: "https://www.typescriptlang.org/",
  },
  { name: "NodeJS", logo: nodejsLogo, url: "https://nodejs.org/fr" },
  { name: "Java", logo: javaLogo, url: "https://www.java.com/fr/" },
  { name: "Git", logo: gitLogo, url: "https://git-scm.com/" },
  { name: "Docker", logo: dockerLogo, url: "https://www.docker.com/" },
  { name: "MySQL", logo: mysqlLogo, url: "https://www.mysql.com/fr/" },
  { name: "MongoDB", logo: mongodbLogo, url: "https://www.mongodb.com/" },
  { name: "Adonis", logo: adonisLogo, url: "https://adonisjs.com/" },
];
---

<section id="exph">
  <div class="exph__wrapper">
    <h2 class="exph__title" data-reveal="up">
      <span>{t.title}</span>
    </h2>
    <div class="exph__cols">
      <div class="exph__col exph__cols-left" data-reveal="left" data-reveal-delay="1">
        <div>
          <h3>{t.sections.frontend.title}</h3>
          <p>
            {t.sections.frontend.description}
            <span>{t.sections.frontend.highlighted1}</span> {t.sections.frontend.descriptionMiddle}
            <span>{t.sections.frontend.highlighted2}</span> {t.sections.frontend.descriptionEnd}
          </p>
        </div>
        <div>
          <h3>{t.sections.backend.title}</h3>
          <p>
            {t.sections.backend.description}
            <span>{t.sections.backend.highlighted}</span>{t.sections.backend.descriptionEnd}
          </p>
        </div>
        <div>
          <h3>{t.sections.devops.title}</h3>
          <p>
            {t.sections.devops.description}
            <span>{t.sections.devops.highlighted}</span> {t.sections.devops.descriptionEnd}
          </p>
        </div>
      </div>
      <div class="exph__col exph__cols-right" data-reveal="right" data-reveal-delay="2">
        <div class="exph__tech-wrapper">
          <div class="exph__tech-grid">
            {
              technologies.map((tech) => (
                <a
                  href={tech.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="exph__tech-item"
                  data-tooltip={tech.name}
                  title={`${t.visitSite} ${tech.name}`}
                >
                  <img src={tech.logo.src} alt={`${t.techAlt} ${tech.name}`} />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
