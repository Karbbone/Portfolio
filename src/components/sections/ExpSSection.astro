---
// Import des ic√¥nes pour les soft skills
import chatIcon from "../../assets/chat.svg";
import collabIcon from "../../assets/collab.svg";
import fdnIcon from "../../assets/fdn.png";
import loopIcon from "../../assets/loop.svg";
import type { Language } from "../../i18n/config";

interface Props {
  lang: Language;
  translations: any;
}

const { lang, translations } = Astro.props;
const t = translations.expS;
---

<section id="exps">
  <div class="exps__wrapper">
    <h2 class="exps__title" data-reveal="up">
      <span>{t.title}</span>
    </h2>
    <div class="exps__grid">
      <div class="exps__card" data-reveal="up" data-reveal-delay="1">
        <div class="exps__card-header">
          <h3 class="exps__card-title">{t.cards.listening.title}</h3>
          <div class="exps__card-icon">
            <img src={chatIcon.src} alt="Chat icon" />
          </div>
        </div>
        <p class="exps__card-text">
          {t.cards.listening.description} <span class="highlighted highlighted-blue"
            >{t.cards.listening.highlighted}</span
          >{t.cards.listening.descriptionEnd}
        </p>
      </div>

      <div class="exps__card" data-reveal="up" data-reveal-delay="2">
        <div class="exps__card-header">
          <h3 class="exps__card-title">{t.cards.teamwork.title}</h3>
          <div class="exps__card-icon">
            <img src={collabIcon.src} alt="Collaboration icon" />
          </div>
        </div>
        <p class="exps__card-text">
          {t.cards.teamwork.description} <span
            class="highlighted highlighted-blue">{t.cards.teamwork.highlighted}</span
          >{t.cards.teamwork.descriptionEnd}
        </p>
      </div>

      <div class="exps__card" data-reveal="up" data-reveal-delay="3">
        <div class="exps__card-header">
          <h3 class="exps__card-title">{t.cards.curious.title}</h3>
          <div class="exps__card-icon">
            <img src={loopIcon.src} alt="Loop icon" />
          </div>
        </div>
        <p class="exps__card-text">
          {t.cards.curious.description1} <span class="highlighted highlighted-blue"
            >{t.cards.curious.highlighted}</span
          >{t.cards.curious.description1End}
        </p>
        <p class="exps__card-text">
          {t.cards.curious.description2}
        </p>
      </div>

      <div class="exps__card" data-reveal="up" data-reveal-delay="4">
        <div class="exps__card-header">
          <h3 class="exps__card-title">{t.cards.fresque.title}</h3>
          <div class="exps__card-icon">
            <img src={fdnIcon.src} alt="Digital Collage logo" />
          </div>
        </div>
        <p class="exps__card-text">
          {t.cards.fresque.description} <span
            class="highlighted highlighted-blue">{t.cards.fresque.highlighted}</span
          > {t.cards.fresque.descriptionEnd}
        </p>
        <a
          href="https://www.fresquedunumerique.org/"
          target="_blank"
          rel="noopener noreferrer"
          class="exps__card-cta"
          draggable="false">{t.cards.fresque.cta}</a
        >
      </div>
    </div>
  </div>
</section>
